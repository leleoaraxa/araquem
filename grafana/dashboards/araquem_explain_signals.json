{
  "title": "Araquem — Explain · Signals & Path",
  "uid": "araquem-explain-signals",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 2,
  "refresh": "10s",
  "tags": ["Araquem", "Planner", "Explain"],
  "panels": [
    {
      "type": "stat",
      "title": "Explain enabled (total 5m)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "grafana" },
      "targets": [{ "expr": "increase(sirios_planner_explain_enabled_total[5m])", "refId": "A" }]
    },
    {
      "type": "gauge",
      "title": "Decision depth (derivado, 5m)",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "grafana" },
      "fieldConfig": { "defaults": { "min": 0 } },
      "targets": [
        { "expr": "sum(rate(sirios_planner_explain_nodes_total[5m]))", "refId": "A" }
      ]
    },
    {
      "type": "bargauge",
      "title": "Explain nodes by kind (5m rate)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "grafana" },
      "targets": [
        { "expr": "sum(rate(sirios_planner_explain_nodes_total[5m])) by (node_kind)", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Intent score (p50/p90/p95)",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "grafana" },
      "targets": [
        { "expr": "histogram_quantile(0.50, sum(rate(sirios_planner_intent_score_bucket[5m])) by (le,intent))", "legendFormat": "p50 {{intent}}", "refId": "A" },
        { "expr": "histogram_quantile(0.90, sum(rate(sirios_planner_intent_score_bucket[5m])) by (le,intent))", "legendFormat": "p90 {{intent}}", "refId": "B" },
        { "expr": "histogram_quantile(0.95, sum(rate(sirios_planner_intent_score_bucket[5m])) by (le,intent))", "legendFormat": "p95 {{intent}}", "refId": "C" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Entity score (p50/p90/p95)",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "grafana" },
      "targets": [
        { "expr": "histogram_quantile(0.50, sum(rate(sirios_planner_entity_score_bucket[5m])) by (le,entity))", "legendFormat": "p50 {{entity}}", "refId": "A" },
        { "expr": "histogram_quantile(0.90, sum(rate(sirios_planner_entity_score_bucket[5m])) by (le,entity))", "legendFormat": "p90 {{entity}}", "refId": "B" },
        { "expr": "histogram_quantile(0.95, sum(rate(sirios_planner_entity_score_bucket[5m])) by (le,entity))", "legendFormat": "p95 {{entity}}", "refId": "C" }
      ]
    }
  ],
  "time": { "from": "now-1h", "to": "now" }
}
