# Araquem — Dev Only (.env)
DATABASE_URL=postgresql://edge_user:senha@sirios_db:5432/edge_db
REDIS_URL=redis://redis:6379/0

# Runtime local
TZ=America/Sao_Paulo
PYTHONUTF8=1

# LLM / Ollama
OLLAMA_URL=http://ollama:11434
LLM_MODE=local
LLM_MODEL=mistral:instruct
OLLAMA_GEN_MODEL=mistral:instruct
LLM_TIMEOUT=60
# Narrator (drop-in)
NARRATOR_ENABLED=false
NARRATOR_SHADOW=true
NARRATOR_MODEL=mistral:instruct
# NARRATOR_TIMEOUT=25  # (opcional, só se for lido pelo código)

# RAG
RAG_INDEX_PATH=data/embeddings/store/embeddings.jsonl

# Observabilidade
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
OTEL_SERVICE_NAME=api
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OBSERVABILITY_CONFIG=data/ops/observability.yaml
SIRIOS_METRICS_STRICT=false

# Ontologia / Qualidade
ONTOLOGY_PATH=data/ontology/entity.yaml
QUALITY_SAMPLES_GLOB=data/ops/quality/*.json

# Ops
BUILD_ID=dev-20251030
LOG_LEVEL=INFO
CACHE_OPS_TOKEN=araquem-secret-bust-2025
QUALITY_OPS_TOKEN=araquem-secret-bust-2025

# Opcional (só se seu embedder suportar lote)
# EMBED_BATCH_SIZE=8
