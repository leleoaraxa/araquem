{
  "title": "10 · API SLO & Pipeline",
  "uid": "api-slo-pipeline",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "p95 Latência (ms)",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate({{ bindings.api_latency_bucket }}{{ promql_filter(['job','entity','intent']) }}[$interval])) by (le)) * 1000",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green"},
              {"color": "red", "value": {{ thresholds.api.slo_ms_p95 }}}
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "p99 Latência (ms)",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate({{ bindings.api_latency_bucket }}{{ promql_filter(['job','entity','intent']) }}[$interval])) by (le)) * 1000",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green"},
              {"color": "red", "value": {{ thresholds.api.slo_ms_p95 * 1.2 }}}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Erro (%)",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
      "targets": [
        {
          "expr": "100 * sum(rate({{ bindings.api_errors_total }}{{ promql_filter(['job','entity','intent']) }}[$interval])) / sum(rate({{ bindings.api_requests_total }}{{ promql_filter(['job','entity','intent']) }}[$interval]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green"},
              {"color": "red", "value": {{ thresholds.api.error_rate_pct }}}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Throughput (req/s)",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
      "targets": [
        {
          "expr": "sum(rate({{ bindings.api_requests_total }}{{ promql_filter(['job','entity','intent']) }}[$interval]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "req/s"}
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Distribuição de latência",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate({{ bindings.api_latency_bucket }}{{ promql_filter(['job','entity','intent']) }}[5m])) by (le)) * 1000",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate({{ bindings.api_latency_bucket }}{{ promql_filter(['job','entity','intent']) }}[5m])) by (le)) * 1000",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate({{ bindings.api_latency_bucket }}{{ promql_filter(['job','entity','intent']) }}[5m])) by (le)) * 1000",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "ms"}
      },
      "options": {
        "legend": {"showLegend": true},
        "tooltip": {"mode": "multi"}
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Throughput por rota",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
      "targets": [
        {
          "expr": "sum(rate({{ bindings.api_requests_total }}{{ promql_filter(['job','entity','intent']) }}[5m])) by ({{ labels.route }})",
          "legendFormat": "{{ '{' * 2 }}{{ labels.route }}{{ '}' * 2 }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "req/s"}
      },
      "options": {
        "legend": {"showLegend": true},
        "tooltip": {"mode": "multi"}
      }
    },
    {
      "id": 7,
      "type": "bargauge",
      "title": "Erros por status",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 12},
      "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
      "targets": [
        {
          "expr": "sum(rate({{ bindings.api_errors_total }}{{ promql_filter(['job','entity','intent']) }}[5m])) by ({{ labels.status }})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green"},
              {"color": "red", "value": {{ thresholds.api.error_rate_pct / 100.0 }} }
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "type": "bargauge",
      "title": "Erros por código",
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 12},
      "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
      "targets": [
        {
          "expr": "sum(rate({{ bindings.api_errors_total }}{{ promql_filter(['job','entity','intent']) }}[5m])) by (code)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 9,
      "type": "table",
      "title": "Pipeline · Latência média",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
      "targets": [
        {
          "expr": "sum(rate({{ bindings.api_latency_sum }}{{ promql_filter(['job','entity','intent']) }}[5m])) / sum(rate({{ bindings.api_latency_count }}{{ promql_filter(['job','entity','intent']) }}[5m]))",
          "format": "table",
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "indexByName": {
              "Value": 1
            }
          }
        }
      ]
    },
    {
      "id": 10,
      "type": "heatmap",
      "title": "p95 por entidade vs intent",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
      "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate({{ bindings.api_latency_bucket }}{{ promql_filter(['job']) }}[5m])) by (le, {{ labels.entity }}, {{ labels.intent }})) * 1000",
          "format": "heatmap",
          "refId": "A"
        }
      ]
    },
    {
      "id": 11,
      "type": "table",
      "title": "Rows por entidade (proxy)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
      "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
      "targets": [
        {
          "expr": "sum(rate({{ bindings.api_latency_count }}{{ promql_filter(['job','entity']) }}[5m])) by ({{ labels.entity }})",
          "format": "table",
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            }
          }
        }
      ]
    },
    {
      "id": 12,
      "type": "text",
      "title": "Tracing (Tempo)",
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 28},
      "options": {
        "content": "[Abrir traces no Tempo](d/tempo/tempo?var-service.name={{ labels.job }}&var-operation=%2Fask)",
        "mode": "markdown"
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "job",
        "type": "query",
        "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
        "query": "label_values({{ bindings.api_requests_total }}, {{ labels.job }})",
        "definition": "label_values({{ bindings.api_requests_total }}, {{ labels.job }})",
        "includeAll": true,
        "refresh": 1,
        "current": {
          "selected": false,
          "text": "{{ variables.default_job }}",
          "value": "{{ variables.default_job }}"
        }
      },
      {
        "name": "entity",
        "type": "query",
        "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
        "query": "label_values({{ bindings.api_requests_total }}, {{ labels.entity }})",
        "definition": "label_values({{ bindings.api_requests_total }}, {{ labels.entity }})",
        "includeAll": true,
        "refresh": 1,
        "current": {
          "selected": false,
          "text": "{{ variables.default_entity }}",
          "value": "{{ variables.default_entity }}"
        }
      },
      {
        "name": "intent",
        "type": "query",
        "datasource": {"type": "{{ datasource }}", "uid": "{{ datasource_uid }}"},
        "query": "label_values({{ bindings.api_requests_total }}, {{ labels.intent }})",
        "definition": "label_values({{ bindings.api_requests_total }}, {{ labels.intent }})",
        "includeAll": true,
        "refresh": 1,
        "current": {
          "selected": false,
          "text": "{{ variables.default_intent }}",
          "value": "{{ variables.default_intent }}"
        }
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {"type": "-- Grafana --", "uid": "grafana"},
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
